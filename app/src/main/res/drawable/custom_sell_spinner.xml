<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- Border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:color="@color/motorbike_screen_color"
                        android:width="2dp" />
                    <padding
                        android:right="12dp"
                        android:left="12dp"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>

            <!-- Background -->
            <item>
                <shape android:shape="rectangle">
                    <size android:height="31dp" />
                    <padding
                        android:right="12dp"
                        android:left="12dp"/>
                    <corners android:radius="8dp"/> <!-- Adjust the radius as needed -->
                </shape>
            </item>

            <!-- Arrow Icon -->
            <item android:drawable="@drawable/arrow_drop_down"
                android:gravity="end" />
        </layer-list>
    </item>

</selector>