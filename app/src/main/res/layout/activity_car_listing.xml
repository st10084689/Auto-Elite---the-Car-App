<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.CarListingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/car_listing_banner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/car_screen_color"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/arrowBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            />
        <TextView
            android:id="@+id/car_listing_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="24sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/car_listing_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="model"
        app:layout_constraintTop_toBottomOf="@id/car_listing_banner"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/sora_semi_bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textIsSelectable="true"
        android:longClickable="true"/>

    <TextView
        android:id="@+id/car_listing_variant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textIsSelectable="true"
        android:longClickable="true"
        android:fontFamily="@font/sora_semi_bold"
        android:text="variant"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/car_listing_model"
        app:layout_constraintStart_toEndOf="@id/car_listing_model"
        app:layout_constraintTop_toTopOf="@id/car_listing_model"
         />
    <TextView
        android:id="@+id/car_listing_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R200 000"
        app:layout_constraintTop_toBottomOf="@id/car_listing_variant"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/sora_semi_bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/car_screen_color"/>
    <TextView
        android:id="@+id/car_listing_price_monthly_Est"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Est"
        app:layout_constraintTop_toBottomOf="@id/car_listing_price"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/sora_semi_bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/car_listing_price_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sora_semi_bold"
        android:text="R2000"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/car_listing_price_monthly_Est"
        app:layout_constraintStart_toEndOf="@id/car_listing_price_monthly_Est"
        app:layout_constraintTop_toTopOf="@id/car_listing_price_monthly_Est" />

        <TextView
            android:id="@+id/car_listing_price_monthly_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora_semi_bold"
            android:text="pm"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/car_listing_price_monthly"
            app:layout_constraintStart_toEndOf="@+id/car_listing_price_monthly"
            app:layout_constraintTop_toTopOf="@+id/car_listing_price_monthly" />

    <androidx.cardview.widget.CardView
        android:id="@+id/listing_car_image_cardview"
        android:layout_width="350dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_listing_price_monthly"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/listing_car_viewpager"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listing_car_recycler"
            app:layout_constraintTop_toBottomOf="@id/listing_car_image_cardview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="8dp"
            android:orientation="horizontal"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/listing_car_info_cardview"
            android:layout_width="match_parent"
            android:maxWidth="350dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listing_car_recycler"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_listing_grey"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/car_listing_mileage_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mileage"
                    android:fontFamily="@font/sora_semi_bold"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/car_listing_mileage_value_card"
                    app:layout_constraintEnd_toStartOf="@+id/car_listing_mileage_value_card"
                    app:layout_constraintTop_toTopOf="@+id/car_listing_mileage_value_card"
                    android:layout_marginEnd="10dp"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/car_listing_mileage_value_card"
                    android:layout_width="175dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/car_listing_mileage_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250 000"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/car_listing_mileage_km"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="km"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="5dp"
                            app:layout_constraintStart_toEndOf="@+id/car_listing_mileage_value"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/car_listing_new_used_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Or Used"
                    android:fontFamily="@font/sora_semi_bold"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/car_listing_new_used_value_card"
                    app:layout_constraintEnd_toStartOf="@+id/car_listing_new_used_value_card"
                    app:layout_constraintTop_toTopOf="@+id/car_listing_new_used_value_card" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/car_listing_new_used_value_card"
                    android:layout_width="175dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/car_listing_mileage_value_card"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/car_listing_new_used_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/car_listing_year_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:fontFamily="@font/sora_semi_bold"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/car_listing_year_value_card"
                    app:layout_constraintTop_toTopOf="@+id/car_listing_year_value_card" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/car_listing_year_value_card"
                    android:layout_width="175dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/car_listing_new_used_value_card">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/car_listing_year_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/list_car_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/listing_car_info_cardview"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:text="Description"
            android:fontFamily="@font/sora_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/list_car_description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora_light"
            android:text="This"
            android:textIsSelectable="true"
            android:longClickable="true"
            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintEnd_toEndOf="@+id/list_car_description"
            app:layout_constraintStart_toStartOf="@+id/list_car_description"
            app:layout_constraintTop_toBottomOf="@id/list_car_description" />

        <TextView
            android:id="@+id/list_car_read_more_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:fontFamily="@font/sora_light"
            android:textColor="@color/car_screen_color"
            app:layout_constraintEnd_toEndOf="@+id/list_car_description_txt"
            app:layout_constraintTop_toBottomOf="@id/list_car_description_txt" />
    <androidx.cardview.widget.CardView
        android:id="@+id/sell_one_back_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sell_one_continue_button"
        app:layout_constraintTop_toBottomOf="@id/list_car_read_more_txt"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#8F8F8F"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Car Seller"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sell_one_continue_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sell_one_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/car_screen_color"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Message"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>