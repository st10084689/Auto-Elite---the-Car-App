<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SellOneFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/sell_car_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Brand"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_brand"
            app:layout_constraintStart_toEndOf="@id/sell_car_brand"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sell_car_brand_cardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_brand"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
            >
            <TextView
                android:id="@+id/carBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:textSize="24sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/sell_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_brand_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Model"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_model"
            app:layout_constraintStart_toEndOf="@id/sell_car_model"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sell_car_model_cardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_model"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/sell_car_background"
            >
            <TextView
                android:id="@+id/carModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:textSize="24sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/sell_car_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_model_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Variant"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_variant"
            app:layout_constraintStart_toEndOf="@id/sell_car_variant"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sell_car_variant_cardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_variant"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/sell_car_background"
            >
            <TextView
                android:id="@+id/carVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:textSize="24sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/sell_car_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_variant_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Year"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_year"
            app:layout_constraintStart_toEndOf="@id/sell_car_year"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sell_car_year_cardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_year"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
            >
            <TextView
                android:id="@+id/carYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:textSize="24sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/sell_car_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_year_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_color"
            app:layout_constraintStart_toEndOf="@id/sell_car_color"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <Spinner
            android:id="@+id/sell_car_color_cardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_color"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
            />

        <TextView
            android:id="@+id/sell_car_transmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_color_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Transmission"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_transmission"
            app:layout_constraintStart_toEndOf="@id/sell_car_transmission"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <Spinner
            android:id="@+id/sell_car_transmission_cardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_transmission"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
            />

        <TextView
            android:id="@+id/sell_car_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_transmission_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Body Type"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_body"
            app:layout_constraintStart_toEndOf="@id/sell_car_body"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sell_car_body_cardview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_body"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
        ></androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/sell_car_wheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_body_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Wheel Drive"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_wheel"
            app:layout_constraintStart_toEndOf="@id/sell_car_wheel"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <Spinner
            android:id="@+id/sell_car_wheel_cardview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_wheel"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/sell_one_back_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_wheel_cardview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sell_one_continue_button"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#8F8F8F"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Back"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sell_one_continue_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_wheel_cardview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/sell_one_back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/motorbike_screen_color"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Continue"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>