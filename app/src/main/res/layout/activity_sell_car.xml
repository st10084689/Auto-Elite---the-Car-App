<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.SellCarActivity">


    <RelativeLayout
        android:id="@+id/NavBarRelative"
        android:layout_width="match_parent"
        android:background="@color/car_screen_color"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell Car"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/sora_font_family"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/informationLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/NavBarRelative"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/CarBrandRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/brandLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/brand_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ff1900"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/brand_spinner"
                android:layout_below="@id/brandLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/CarModelRel"
            android:layout_below="@id/CarBrandRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/modelLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ff1900"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/model_spinner"
                android:layout_below="@id/modelLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="eg: a Class"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/CarVariantRel"
            android:layout_below="@id/CarModelRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/variantLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/variant_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varient"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ff1900"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/variant_spinner"
                android:layout_below="@id/variantLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="eg: Mercedes"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/CarMileageRel"
            android:layout_below="@id/CarVariantRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/mileageLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mileage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mileage"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ff1900"/>
            </LinearLayout>
            <EditText
                android:id="@+id/mileage_edit_text"
                android:layout_below="@id/mileageLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="eg: 100000km"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/CarProvinceRel"
            android:layout_below="@id/CarVariantRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/provinceLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/province_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Province"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ff1900"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/province_spinner"
                android:layout_below="@id/provinceLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="eg: Mercedes"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/CarAreaRel"
            android:layout_below="@id/CarProvinceRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/areaLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/area_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ff1900"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@id/areaLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
            <Spinner
                android:id="@+id/area_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/CarMobileRel"
            android:layout_below="@id/CarAreaRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/mobileLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mobile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ff1900"/>
            </LinearLayout>
            <EditText
                android:id="@+id/mobile_edit_text"
                android:layout_below="@id/mobileLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="eg: 060......"/>

        </RelativeLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/next_button"
        android:layout_below="@+id/informationLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>