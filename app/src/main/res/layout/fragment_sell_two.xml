<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.SellTwoFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/sell_car_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Mileage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_brand"
            app:layout_constraintStart_toEndOf="@id/sell_car_brand"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <EditText
            android:id="@+id/sell_car_mileage_cardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_brand"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
            />

        <TextView
            android:id="@+id/sell_car_new_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_mileage_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="New/Used"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_new_used"
            app:layout_constraintStart_toEndOf="@id/sell_car_new_used"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <Spinner
            android:id="@+id/sell_car_new_used_cardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_new_used"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
            />

        <TextView
            android:id="@+id/sell_car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_new_used_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_price"
            app:layout_constraintStart_toEndOf="@id/sell_car_price"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <EditText
            android:id="@+id/sell_car_price_cardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_price"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
            />
        <TextView
            android:id="@+id/sell_car_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_price_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Province"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_province"
            app:layout_constraintStart_toEndOf="@id/sell_car_province"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <Spinner
            android:id="@+id/sell_car_province_cardview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_province"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background"
            />
        <TextView
            android:id="@+id/sell_car_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sell_car_province_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Description"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sell_car_description"
            app:layout_constraintStart_toEndOf="@id/sell_car_description"
            android:textSize="20sp"
            android:text="*"
            android:textColor="@color/motorbike_secondary_color"/>

        <EditText
            android:id="@+id/sell_car_description_spinner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_description"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sell_car_background_editarea"
            ></EditText>


        <androidx.cardview.widget.CardView
            android:id="@+id/sell_one_back_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_description_spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sell_one_continue_button"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#8F8F8F"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Back"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sell_one_continue_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/sell_car_description_spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/sell_one_back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/motorbike_screen_color"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Continue"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>